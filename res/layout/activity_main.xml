<com.example.bounce.BounceView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f00"
    android:padding="0dp"
    app:minTopHeight="150dp"
    app:maxTopHeight="350dp"
    app:topScrollDistance="40dp"
    app:bottomViewId="@android:id/list"
    app:stableViewId="@android:id/content"
    app:topViewId="@android:id/background"
    tools:context="${relativePackage}.${activityClass}">

    <ImageView
        android:id="@android:id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#808080"
        android:scaleType="centerCrop"
        android:src="@drawable/a" />

    <RelativeLayout
        android:id="@android:id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:text="@string/hello_world"
            android:textColor="#ff0"
            android:textSize="30sp" />
    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0ff" />

</com.example.bounce.BounceView>